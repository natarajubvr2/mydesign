        <xml><![CDATA[<j2:macro name="priority_incident_monthly_counts">
  <script>
    function loadIncidentPriorityStats() {
      var ga = new GlideAjax('GetPriorityIncidentCountsAjax');
      ga.addParam('sysparm_name', 'getData');
      ga.getXMLAnswer(function(response) {
        var data = JSON.parse(response);
        var html = '<table class="table table-bordered"><thead><tr><th>Month</th><th>P1</th><th>P2</th><th>P3</th><th>P4</th></tr></thead><tbody>';

        for (var month in data) {
          html += '<tr><td>' + month + '</td>';
          html += '<td>' + (data[month]['1'] || '0') + '</td>';
          html += '<td>' + (data[month]['2'] || '0') + '</td>';
          html += '<td>' + (data[month]['3'] || '0') + '</td>';
          html += '<td>' + (data[month]['4'] || '0') + '</td>';
          html += '</tr>';
        }

        html += '</tbody></table>';
        document.getElementById('incidentPriorityStatsContainer').innerHTML = html;
      });
    }

    window.addEventListener('load', loadIncidentPriorityStats);
  </script>

  <div id="incidentPriorityStatsContainer">Loading monthly incident priority counts...</div>
</j2:macro>
]]></xml>
